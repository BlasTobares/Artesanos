doctype html
html
  head
    title Artesanos.com
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/estilos.css")
  body
    // Navbar de Bootstrap
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/') Artesanos.com
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            if usuario
              li.nav-item
                a.nav-link(href='/subir') Subir imagen
              li.nav-item
                a.nav-link(href='/mis-imagenes') Mis imágenes
              li.nav-item
                a.nav-link(href='/usuarios') Usuarios
              li.nav-item
                a.nav-link(href='/amigos') Mis amigos
              li.nav-item
                a.nav-link(href='/amigos/imagenes-compartidas') Imágenes compartidas
              li.nav-item
                a.nav-link(href='/solicitudes') Solicitudes
          ul.navbar-nav
            if usuario
              li.nav-item
                a.nav-link.text-warning(href='/logout') Cerrar sesión
            else
              li.nav-item
                a.nav-link(href='/login') Iniciar sesión
              li.nav-item
                a.nav-link(href='/registro') Registrarse

    // Contenido principal con margen
    .container.mt-4
      if mensaje
        .alert.alert-success.alert-dismissible.fade.show(role="alert")
          strong ¡Éxito! 
          | #{mensaje}
          button.btn-close(type="button", data-bs-dismiss="alert")
      if error
        .alert.alert-danger.alert-dismissible.fade.show(role="alert")
          strong ¡Error! 
          | #{error}
          button.btn-close(type="button", data-bs-dismiss="alert")
      block content

    // Scripts de Bootstrap (JS)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")